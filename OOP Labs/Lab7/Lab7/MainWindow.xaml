<Window x:Class="Lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            
            <TabItem Header="Одномерный массив">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>N:</Label>
                        <TextBox Name="Array1Size" Text="3" />
                        <Button Margin="5" Click="ChangeArray1DSize">Изменить</Button>
                    </StackPanel>
                    <ListBox Name="ListBoxArray1D" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Двумерный массив">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>N:</Label>
                        <TextBox Name="Array2SizeN">13</TextBox>
                        <Label>M:</Label>
                        <TextBox Name="Array2SizeM">13</TextBox>
                        <Button Click="ChangeArray2DSize">Изменить</Button>
                    </StackPanel>
                    <TreeView Name="TreeViewArray2D">
                        <TreeViewItem Header="Строка 1">
                            <WrapPanel>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                            </WrapPanel>
                        </TreeViewItem>
                        <TreeViewItem Header="Строка 2">
                            <WrapPanel>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                            </WrapPanel>
                        </TreeViewItem>
                    </TreeView>
                </StackPanel>
            </TabItem>

            <TabItem Header="Рваный массив">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>N:</Label>
                        <TextBox Name="ArrayJaggedSize">13</TextBox>
                        <Button Name="ChangeArrayJagged" Click="ChangeArrayJaggedSize">Изменить</Button>
                    </StackPanel>
                    <TreeView Name="TreeViewArrayJagged">
                        <TreeViewItem>
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Label>Строка 1 M:</Label>
                                    <TextBox>13</TextBox>
                                    <Button>Изменить</Button>
                                </StackPanel>
                            </TreeViewItem.Header>
                            <WrapPanel Name="JaggedArray">
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                                <TextBox>13</TextBox>
                            </WrapPanel>
                        </TreeViewItem>
                    </TreeView>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
