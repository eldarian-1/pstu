<Window x:Class="Lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            
            <TabItem Header="Одномерный массив">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>N:</Label>
                        <TextBox Name="Array1Size" Text="3" />
                        <Button Margin="5" Click="ChangeArray1Size">Изменить</Button>
                    </StackPanel>
                    <ListBox Grid.Column="1" ItemsSource="{Binding Array1Ds}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Text}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Двумерный массив">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>N:</Label>
                        <TextBox>13</TextBox>
                        <Label>M:</Label>
                        <TextBox>13</TextBox>
                        <Button>Изменить</Button>
                    </StackPanel>
                    <TreeView ItemsSource="{Binding Array2Ds}">
                        <TreeView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </TreeView.ItemsPanel>
                        <TreeView.ItemTemplate>
                            <DataTemplate>
                                <TreeViewItem>
                                    <Label Content="{Binding}"/>
                                </TreeViewItem>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </StackPanel>
            </TabItem>

            <TabItem Header="Рваный массив">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label>N:</Label>
                        <TextBox>13</TextBox>
                        <Button>Изменить</Button>
                    </StackPanel>
                    <TreeViewItem>
                        <TreeViewItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Label>1 строка</Label>
                                <Label>M:</Label>
                                <TextBox>13</TextBox>
                                <Button>Изменить</Button>
                            </StackPanel>
                        </TreeViewItem.Header>
                        <WrapPanel Name="JaggedArray">
                            <TextBox>13</TextBox>
                            <TextBox>13</TextBox>
                            <TextBox>13</TextBox>
                            <TextBox>13</TextBox>
                        </WrapPanel>
                    </TreeViewItem>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
