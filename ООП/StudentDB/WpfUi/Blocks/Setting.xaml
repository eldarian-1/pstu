<UserControl x:Class="WpfUi.Blocks.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ComboBox x:Name="UseCasesBox" SelectedIndex="0" />
            <Button Content="Установить" Click="SetButton_Click" />
        </StackPanel>
        <Label Margin="15" Content="Инструкция" />
        <Label Content="Для выполнения действий с записями необходимо выбрать запись в таблице, а затем нажать клавищу соответствующего действия:" />
        <Label Content="E - Редактирование записи" />
        <Label Content="D - Удаление записи" />
    </StackPanel>
</UserControl>
