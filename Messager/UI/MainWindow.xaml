<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="720"
        ResizeMode="CanResize">
    <StackPanel Orientation="Vertical" Width="720">

        <StackPanel Orientation="Horizontal">
            <Label>IP</Label>
            <TextBox x:Name="IPAddressBox">127.0.0.1</TextBox>
            <Label>Local port</Label>
            <TextBox x:Name="LocalPortBox">2323</TextBox>
            <Label>Remote port</Label>
            <TextBox x:Name="RemotePortBox">2324</TextBox>
            <Button x:Name="ConnectButton">Connect</Button>
        </StackPanel>

        <Image x:Name="CameraImage" Width="720" Height="720"></Image>

        <TextBlock x:Name="MessageStory"></TextBlock>

        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label>Name</Label>
                <TextBox>John</TextBox>
                <Button x:Name="SendButton">Send</Button>
            </StackPanel>
            <TextBox x:Name="YourMessageBox">Your message</TextBox>
        </StackPanel>

    </StackPanel>
</Window>
